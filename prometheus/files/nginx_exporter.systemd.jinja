[Unit]
Description=Prometheus nginx exporter
Documentation=https://github.com/oliver006/nginx_exporter.git
Wants=basic.target
After=basic.target network.target

[Service]
User=prometheus
Group=prometheus
EnvironmentFile=/etc/default/nginx_exporter
ExecStart=/usr/bin/nginx-prometheus-exporter
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always
RestartSec=42s

[Install]
WantedBy=multi-user.target
